<Application 
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="NoteManager.App"
  RequestedThemeVariant="Default">           

  <Application.Styles>
      <FluentTheme />
  </Application.Styles>
  <Application.Resources>
    <FontFamily x:Key="NotoSansDisplay">avares://NoteManager/Assets/Fonts#Noto Sans Display</FontFamily>
  </Application.Resources>

  <Application.Styles>
    <Style Selector="TextBlock">
      <Setter Property="FontFamily" Value="{StaticResource NotoSansDisplay}"/>
    </Style>
  </Application.Styles>
</Application>